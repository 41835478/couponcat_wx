<!-- 优惠券列表 -->
<view>
  <loading hidden="{{!loading}}">
    加载中...
  </loading>
  
  <scroll-view scroll-y="true" class="page-body">
    <view class="item" wx:for="{{coupons}}">
      <view wx:for="{{item.lists}}">
        <image class="poster" src="{{item.img}}"></image>
        <view class="meta">
          <text>{{item.title}}</text>
          <text>{{item.price}}</text>
          <text>{{item.time}}</text>
        </view>
      </view>
    </view>
  </scroll-view>
</view>